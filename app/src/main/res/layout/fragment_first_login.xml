<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".FragmentLogin">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="130dp"
        android:layout_height="152dp"
        android:src="@drawable/logo_company_offi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/titleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicia sesión en tu cuenta"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/titleLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_app" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/email_margin_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46"/>

    <EditText
        android:id="@+id/emailUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="59dp"
        android:hint="Ingresa tu correo electrónico"
        android:background="@drawable/input_email"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        android:textColorHint="@color/hintColorInput"
        android:textColor="@color/textColorInput"
        app:layout_constraintTop_toBottomOf="@id/email_margin_top_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Space
        android:id="@+id/space_between_email_and_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/emailUser"
        app:layout_constraintBottom_toTopOf="@id/passwordUser"
        app:layout_constraintHeight_percent="0.03"/>

    <EditText
        android:id="@+id/passwordUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="59dp"
        android:hint="Ingresa tu contraseña"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:textColorHint="@color/hintColorInput"
        android:textColor="@color/textColorInput"
        android:background="@drawable/input_email"
        app:layout_constraintTop_toBottomOf="@id/space_between_email_and_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="59dp"
        android:layout_marginTop="20dp"
        android:text="Iniciar sesión"
        android:textColor="@color/white"
        android:background="@drawable/button_actions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordUser"/>

    <Space
        android:id="@+id/space_between_newAccount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLogin"
        app:layout_constraintBottom_toTopOf="@id/textViewRegister"
        app:layout_constraintHeight_percent="0.25"/>

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes una cuenta? Registrate"
        android:textSize="15sp"
        android:textColor="@color/allColorRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/space_between_newAccount"/>

</androidx.constraintlayout.widget.ConstraintLayout>
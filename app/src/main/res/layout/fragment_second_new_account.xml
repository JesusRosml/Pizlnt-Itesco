<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FragmentNewAccount">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.04" />

        <TextView
            android:id="@+id/textview_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleNewAccount"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/titleLogin"
            app:layout_constraintTop_toTopOf="@+id/top_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descriptionNewAccount"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/allColorRegister"
            app:layout_constraintTop_toBottomOf="@+id/textview_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Space
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintBottom_toTopOf="@id/inputName"
            app:layout_constraintHeight_percent="0.07"/>

        <EditText
            android:id="@+id/inputName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            android:hint="@string/placeholderName"
            android:inputType="textCapWords"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hintColorInput"
            android:textColor="@color/textColorInput"
            android:background="@drawable/input_email"
            app:layout_constraintTop_toBottomOf="@id/space1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/inputName"
            app:layout_constraintBottom_toTopOf="@id/inputSurname"
            app:layout_constraintHeight_percent="0.02"/>

        <EditText
            android:id="@+id/inputSurname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            android:hint="@string/placeholderSurname"
            android:inputType="textCapWords"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hintColorInput"
            android:textColor="@color/textColorInput"
            android:background="@drawable/input_email"
            app:layout_constraintTop_toBottomOf="@id/space2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:id="@+id/space3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/inputSurname"
            app:layout_constraintBottom_toTopOf="@id/inputSecondSurname"
            app:layout_constraintHeight_percent="0.02"/>

        <EditText
            android:id="@+id/inputSecondSurname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            android:hint="@string/placeholderSecondSurname"
            android:inputType="textCapWords"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hintColorInput"
            android:textColor="@color/textColorInput"
            android:background="@drawable/input_email"
            app:layout_constraintTop_toBottomOf="@id/space3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:id="@+id/space4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/inputSecondSurname"
            app:layout_constraintBottom_toTopOf="@id/inputEmail"
            app:layout_constraintHeight_percent="0.02"/>

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            android:hint="@string/placeholderEmail"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hintColorInput"
            android:textColor="@color/textColorInput"
            android:background="@drawable/input_email"
            app:layout_constraintTop_toBottomOf="@id/space4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:id="@+id/space5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/inputEmail"
            app:layout_constraintBottom_toTopOf="@id/inputPassword"
            app:layout_constraintHeight_percent="0.02"/>

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            android:hint="@string/placeholderPassword"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hintColorInput"
            android:textColor="@color/textColorInput"
            android:background="@drawable/input_email"
            app:layout_constraintTop_toBottomOf="@id/space5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:id="@+id/space6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/inputPassword"
            app:layout_constraintBottom_toTopOf="@id/listCareer"
            app:layout_constraintHeight_percent="0.02"/>

        <!-- <EditText
            android:id="@+id/inputConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="59dp"
            android:hint="@string/placeholderConfirmPass"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="@color/hintColorInput"
            android:textColor="@color/textColorInput"
            android:background="@drawable/input_email"
            app:layout_constraintTop_toBottomOf="@id/space6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:id="@+id/space7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/inputConfirmPassword"
            app:layout_constraintBottom_toTopOf="@id/listCareer"
            app:layout_constraintHeight_percent="0.02"/> -->

        <Spinner
            android:id="@+id/listCareer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            android:background="@drawable/input_email"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/space6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Space
            android:id="@+id/space7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/listCareer"
            app:layout_constraintBottom_toTopOf="@id/buttonRegister"
            app:layout_constraintHeight_percent="0.01"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="57dp"
            android:layout_marginTop="20dp"
            android:text="Crear cuenta"
            android:textColor="@color/white"
            android:background="@drawable/button_actions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space7"/>

        <Space
            android:id="@+id/space8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/buttonRegister"
            app:layout_constraintBottom_toTopOf="@id/textReturnRegister"
            app:layout_constraintHeight_percent="0.08"/>

        <TextView
            android:id="@+id/textReturnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Tienes una cuenta? Iniciar sesión"
            android:textSize="15sp"
            android:textColor="@color/allColorRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space8"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>